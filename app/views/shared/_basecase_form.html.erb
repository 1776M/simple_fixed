<%= form_for @basecase do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <%= hidden_field_tag :group_id, @group.id %>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>