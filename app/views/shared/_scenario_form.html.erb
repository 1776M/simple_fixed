<%= form_for @scenario do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <%= hidden_field_tag :project_id, @project.id %>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>