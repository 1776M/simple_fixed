<h1>
  <%= @group.group_name %> 
</h1>


<h3>
   Financial data
</h3>  

  <% @basecases.each do |basecase| %>
     <li>
       <%= link_to 'Update your business financials', basecase %>
       <%if current_user.name == 'mandeep3' %>

              <%= link_to "delete", basecase,   :method => :delete,
                                                :confirm => "You sure?" %>
      <% end%>
     </li>
  <% end %>

<br/><br/>
<hr>

<table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <%= render 'shared/user_form' %>
      </td>
    </tr>
</table>

<hr>

<h3>Current group members</h3>
<% @users.each do |user| %>
   <li>
     <%= link_to user.name, user %>
     <%if user.admin? %>
            <%= link_to "delete", user,   :method => :delete,
                                          :confirm => "You sure?",
                                          :title => user.name %>
     <% end%>
   </li>
<% end %>

<% if @group.basecases.count < 1 %>
  <% if current_user.name == 'mandeep3' %>
    <table class="front" summary="For signed-in users">
        <tr>
          <td class="main">
            <%= render 'shared/basecase_form' %>
          </td>
        </tr>
    </table>
  <% end %>
<% end %>


