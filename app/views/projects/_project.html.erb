<tr>
  <td class="projects">
    <span class="content"><%= link_to project.project_name, project_path(project.id) %></span>
  </td>
</tr>

<% if current_user?(project.user) %>
  <td>
    <%= link_to "delete", project,   :method => :delete,
                                     :confirm => "You sure?",
                                     :title => project.project_name %>
  </td>
<% end %>
